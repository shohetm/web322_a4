<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User History</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <%- include('partials/navbar', { page: '/userHistory' }) %>
    </header>
    <div class="container mx-auto mt-8">
        <div class="bg-white p-8 rounded shadow-md">
            <div class="hero">
                <h1 class="text-3xl font-bold mb-2">User History</h1>
                <p class="text-xl">Welcome, <%= session.user.userName %></p>
                <p class="text-xl">Email: <%= session.user.email %></p>
            </div>
            <div class="mt-6">
                <table class="table-auto w-full">
                    <thead>
                        <tr>
                            <th class="px-4 py-2">Login Date/Time</th>
                            <th class="px-4 py-2">Client Information</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (session.user.loginHistory && session.user.loginHistory.length > 0) { %>
                            <% session.user.loginHistory.forEach(function(history) { %>
                                <tr>
                                    <td class="border px-4 py-2"><%= new Date(history.dateTime).toLocaleString() %></td>
                                    <td class="border px-4 py-2"><%= history.userAgent %></td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="2" class="border px-4 py-2 text-center">No login history available</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
